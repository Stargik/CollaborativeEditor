.app-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
}

.main-content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

@media (max-width: 1024px) {
  .main-content .properties-panel {
    display: none;
  }
}

@media (max-width: 768px) {
  .main-content .sidebar {
    display: none;
  }
}
